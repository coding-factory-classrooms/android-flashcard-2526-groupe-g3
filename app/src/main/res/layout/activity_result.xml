<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <ImageView
        android:id="@+id/HomeResultImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_button" />

    <ImageView
        android:id="@+id/ShareImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/share_button" />

    <ImageView
        android:id="@+id/ResultImageView"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_margin="100dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/result_image" />

    <Button
        android:id="@+id/QuestionButton2"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Question"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BackButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResultPercentTextView" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Retour"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/QuestionButton2"
        app:layout_constraintTop_toBottomOf="@+id/ResultPercentTextView" />

    <TextView
        android:id="@+id/ResultPercentTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="75%"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/ResultNumberTextView"
        app:layout_constraintStart_toStartOf="@+id/ResultNumberTextView"
        app:layout_constraintTop_toBottomOf="@+id/ResultNumberTextView" />

    <TextView
        android:id="@+id/TimeNumberTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="0s"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/ResultImageView"
        app:layout_constraintStart_toStartOf="@+id/ResultImageView"
        app:layout_constraintTop_toBottomOf="@+id/ResultImageView" />

    <TextView
        android:id="@+id/ResultNumberTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="0%"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/TimeNumberTextView"
        app:layout_constraintStart_toStartOf="@+id/TimeNumberTextView"
        app:layout_constraintTop_toBottomOf="@+id/TimeNumberTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>